# Discord Bot Token
DISCORD_TOKEN=your_bot_token_here

# Discord Guild (Server) ID
GUILD_ID=your_server_id_here

# Admin-Mod Channel ID (bot sadece burada mesaj atar)
ADMIN_MOD_CHANNEL_ID=your_admin_mod_channel_id_here

# Log Channel ID (sistem logları için ayrı kanal)
LOG_CHANNEL_ID=your_log_channel_id_here

# Schedule Channel ID (takvim yayınları için ayrı kanal)  
SCHEDULE_CHANNEL_ID=your_schedule_channel_id_here

# Mod Schedule Channel ID (moderatör takvimi kanalı)
MOD_SCHEDULE_CHANNEL_ID=your_mod_schedule_channel_id_here

# Moderatör Rolleri (virgülle ayırın)
MOD_ROLES=MOD,SR MOD,ADMIN

# DM Anket Gönderim Zamanı (Cron format: saniye dakika saat gün ay haftanın_günü)
# Örnek: Her Pazar 18:00 = "0 0 18 * * 0"
SURVEY_CRON=0 0 18 * * 0

# Yanıt verme süresi (saat cinsinden)
RESPONSE_TIMEOUT_HOURS=24

# Ban süreleri
FIRST_VIOLATION_DAYS=2  # İlk ihlal: 2 gün moderatörlük yasağı
SECOND_VIOLATION_DAYS=1 # İkinci ihlal: 1 saat (saat cinsinden)
THIRD_VIOLATION_DAYS=1  # Üçüncü ihlal: 1 gün moderatörlük yasağı
WRITE_TIMEOUT_MINUTES=60 # Yazma yasağı süresi (dakika)

# Saat aralıkları (JSON format) - 5 moderatör için 24 saat eşit bölünmüş
TIME_SLOTS=["00:00-05:00","05:00-10:00","10:00-15:00","15:00-20:00","20:00-24:00"]

# Veritabanı Ayarları (MySQL)
DB_TYPE=mysql
DB_HOST=localhost
DB_NAME=discord_mod_db
DB_USER=discord_user
DB_PASS=discord_pass_2024

# Eski SQLite (yedek için)
DATABASE_PATH=./data/bot.db

# Log seviyesi (info, warn, error)
LOG_LEVEL=info

# Otomatik Takvim Sistemi
AUTO_SCHEDULE_ENABLED=true        # Otomatik takvim sistemi açık/kapalı
DAILY_SCHEDULE_HOUR=8             # Günlük takvim kontrolü saati (24 saat formatı)
SURVEY_TIMEOUT_HOURS=5            # Günlük anket yanıt süresi (saat)

# Web Yönetim Paneli Ayarları
WEB_PORT=6060                     # Web paneli portu
WEB_SESSION_SECRET=discord-mod-panel-secret-key-change-this
ADMIN_USERNAME=admin              # Web paneli admin kullanıcı adı
ADMIN_PASSWORD=your_secure_password_here  # Web paneli admin şifresi (MUTLAKA değiştirin!)

# Web Paneli Güvenlik
WEB_HTTPS_ENABLED=false           # HTTPS kullanımı (production için true yapın)
WEB_RATE_LIMIT=100                # Dakikada maksimum istek sayısı 